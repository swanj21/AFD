<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="Jerry's cool game!" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition> <!-- File row -->
            <RowDefinition Height="*"></RowDefinition>    <!-- Middle row(* means give all available space)-->
            <RowDefinition Height="225"></RowDefinition>  <!-- Bottom row(225px) -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Menu" Background="AliceBlue"></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Player Information" Background="Aquamarine"></Label>
        <Label Grid.Row="1" Grid.Column="1" Content="Game Data" Background="Beige"></Label>
        <Label Grid.Row="2" Grid.Column="0" Content="Inventory and Quests" Background="BurlyWood"></Label>
        <Label Grid.Row="2" Grid.Column="1" Content="Combat/Movement controls" Background="Lavender"></Label>
    </Grid>
</Window>
